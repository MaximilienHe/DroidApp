<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.redgunner.droidsoft.view.fragment.MainFragment"
        android:label="MainFragment" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.redgunner.droidsoft.view.fragment.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="PostId"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_detailFragment_to_commentsFragment"
            app:destination="@id/commentsFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_detailFragment"
        app:destination="@id/detailFragment" />
    <fragment
        android:id="@+id/commentsFragment"
        android:name="com.redgunner.droidsoft.view.fragment.CommentsFragment"
        android:label="fragment_comments"
        tools:layout="@layout/fragment_comments">
        <argument
            android:name="postId"
            app:argType="integer" />
    </fragment>
    <action
        android:id="@+id/action_global_searchFragment"
        app:destination="@id/searchFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.redgunner.droidsoft.view.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id ="@+id/action_global_searchFragment_to_searchResultFragment"
            app:destination="@id/searchResultFragment"/>
    </fragment>

    <fragment
        android:id="@+id/searchResultFragment"
        android:name="com.redgunner.droidsoft.view.fragment.SearchResultFragment"
        android:label="fragment_search_result"
        tools:layout="@layout/fragment_search_result">
        <action
            android:id="@+id/action_global_searchResultFragment_to_detailFragment"
            app:destination="@id/detailFragment"/>
        <argument
            android:name="title"
            app:argType="string"/>
    </fragment>

</navigation>